{
  "name": "machiyomi-desktop",
  "version": "1.0.0",
  "description": "Masaüstü manga okuyucu - Mihon/Tachiyomi benzeri",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "sleep 3 && electron .",
    "build:renderer": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:electron",
    "start": "electron .",
    "pack": "npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.2",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.2"
  },
  "build": {
    "appId": "com.machiyomi.desktop",
    "productName": "Machiyomi",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
